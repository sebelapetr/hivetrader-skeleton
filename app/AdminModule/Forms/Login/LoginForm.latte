{form form}
    {foreach $form->getErrors() as $error}
        <div class="card bg-danger text-white shadow mb-3">
            <div class="card-body">
                {_$error}
            </div>
        </div>
    {/foreach}
        <div class="form-group">
            {label email /}
            {input email}
        </div>
        <div class="form-group">
            {label password /}
            {input password}
        </div>
        {input login}
{/form}